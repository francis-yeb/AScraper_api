{
  "compilerOptions": {
    
    "target": "ES2020",                                  
   
    "module": "commonjs",                                
    "outDir": "dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,
     
    //moduleResolution": "NodeNext",
    //"sourceMap": true,          

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
}
